<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
      <%= link_to "Binger", '#', id: "logo" %>
        <div class="nav-collapse">
        
        <ul class="nav pull-right">
          <li><%= link_to  root_path, title: "主页" do %>
            <i class="fa fa-home fa-lg"></i>Home
            <% end %></li>
          <% if signed_in? %>
            <li><%= link_to users_path, title: "用户列表" do %>
              <i class="fa fa-users"></i>
              <% end %>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to current_user do %>
                  <i class="fa fa-user"></i> Profile
                  <% end %>
                </li>
                <li><%= link_to edit_user_path(current_user) do %>
                  <i class="fa fa-cog "></i> Setting
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to signout_path, method: "delete" do %>
                  Sign out <i class="fa fa-sign-out fa-fw"></i>
                  <% end %>
                </li>
              </ul>
            </li>
            
          <% else %>
            <li><%= link_to "Sign in", signin_path, rel: "tooltips", title: "登录" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>