<% provide(:title, "Password reset") %>
<div class="row">
  <div class="span5 offset4">
    <div class="well well-sm">
    <h3>Reset password</h3>
	<div class="form-group" >
	<%= form_tag password_resets_path, :method => :post do %>
	  <div class="field">
	    <%= label_tag :Your_registered_email %>
	    <%= text_field_tag :email, params[:email] %>
	  </div>
	  <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-medium btn-primary" %>
	  </div>
	<% end %>
	<%= link_to "<<<Back", signin_path, class: "btn btn-default" %>
	</div>
  </div>
</div>
</div>