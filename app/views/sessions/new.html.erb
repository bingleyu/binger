<% provide(:title, "Sign in") %>

<div class="row">
  <div class="span7 offset3">
    <div class="well well-sm" >
    <h3 >Sign in to Binger</h3><br />
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.text_field :email, class: "input-group input-sign", placeholder: "Email", rel: "tooltips", title: "您注册的email"  %>
      
      <%= f.password_field :password, class: "input-group input-sign", placeholder: "Password" %><br />

      <%= f.submit "Sign in", class: "btn btn-medium btn-primary", rel: "tooltips", title: "登录" %>
    <% end %>
    <div class="well well-sm" >
    <%= link_to "Forgot your password?", new_password_reset_path, rel: "tooltips", title: "忘记您的密码?" %>
    <p>New to Binger? <%= link_to "Sign up now>>", signup_path , title: "现在就注册" %></p>
  </div>
</div>
</div>
</div>